{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "osx": {
        "version": "0.1.0",
        "command": "sh",
        "args": ["-c"],
        "isShellCommand": true,
        "showOutput": "always",
        "suppressTaskName": true,
        "tasks": [
            {
                "taskName": "Build",
                "args": [
                    "./build.sh"
                ]
            },
            {
                "taskName": "Run",
                "args": [
                    "dotnet ./bin/Debug/netcoreapp1.0/ProjectFileAnalyzer.dll"
                ]
            },
            {
                "taskName": "Clean",
                "args": [
                    "./clean.sh"
                ]
            },
            {
                "taskName": "Run Tests",
                "args":[
                    "dotnet test ./test"
                ]
            }
        ]
    },
    "windows": {
        "command": "echo",
        "isShellCommand": true,
        "args": ["throw new NotSupportedException();"],
        "showOutput": "always"
    }
}